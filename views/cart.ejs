<!DOCTYPE html>
<html lang="en">

<%- include("parts/head", {css:['global.css','header.css','footer.css','cart.css',]}) %>

  <body>

    <%- include('parts/header.ejs') %>

      <main>
        <table>
          <thead>
            <% if(cart !=undefined) { %>
              <tr>
                <th>Product</th>
                <th>Price</th>
                <th>Quantity</th>
                <th>Total</th>
                <th>Actions</th>
              </tr>
              <% } %>
          </thead>
          <tbody>

            <% if(cart !==undefined) {%>
              <% if(cart.length> 0) { %>
                <% for (let item of cart) {%>
                  <tr>
                    <td>
                      <img src="/img/jogos/<%= item.img %>" alt="<%= item.nome %>">
                      <h2>
                        <%= item.nome %>
                      </h2>
                    </td>
                    <td>
                      <%= item.price %>
                    </td>
                    <td>
                      <input type="number" value="<%= item.quantity %>" min="1">
                    </td>
                    <td>
                      <%= item.total %>
                    </td>
                    <td>
                      <a href="/cart/delete/<%= item.id %>"><i class="fa-solid fa-trash"></i></a>
                    </td>
                  </tr>
                <% } %>
              <%} else{%>
              <h2>O carrinho esta vazio</h2>
              <% } %>
              <% } else { %>
            <h2>O carrinho esta vazio</h2>
            <% } %>

          </tbody>
        </table>

        <div class="subtotal">
          <p>Subtotal:<%= totValue?.toLocaleString('pt-br',{style: 'currency' , currency: 'BRL' }) %>
          </p>
          <button>Checkout</button>
          <a href="/products/1"><button>Continue Shopping</button></a>
        </div>

      </main>

      <%- include("parts/footer.ejs") %>



  </body>

</html>