<!DOCTYPE html>
<html lang="en">

<%- include("parts/head", {css:['global.css','header.css','footer.css','detail.css',]}) %>

  <body>

    <%- include('parts/header.ejs') %>

      <main>

        <section class='product-detail'>


          <div class="product-gallery">

            <div class="arrows">
              <button id="left-Arr"><i class="fa-solid fa-left-long"></i></button>
              <div class="mainImage">
                <video class= "carrousel-item" controls>
                  <source src="/videos/Pokemon_Scarlet__Nintendo_Switch.mp4" type="video/mp4">
                </video>
              </div>
              <button id="right-Arr"><i class="fa-solid fa-right-long"></i></button>
            </div>

            <div class="image-gallery">
              <img class= "carrousel-item" src="/img/jogos/<%= produto.img %>" alt="Product Image 1">
              <img class= "carrousel-item" src="/img/jogos/115972-super-mario-piranha-plant-poseable-lamp-1200x675.avif" alt="Product Image 2">
              <img class= "carrousel-item" src="/img/jogos/115640-tree-topper-zelda-package-2000x2000.avif" alt="Product Image 3">
            </div>

          </div>

          <div class="modal">
            <button><i class="fa-solid fa-xmark"></i></button>
          </div>


          <div class="product-info">
            <h6>Nintendo <%=produto.type%>
            </h6>
            <h1>
              <%=produto.nome%>
            </h1>
            <span>
              <%= produto.price%>
            </span>
            <a class="get-now-btn" href="/addInCart/<%= produto.id %>">Get it Now!</a>

          </div>

        </section>


      </main>

      <%- include("parts/footer.ejs") %>

  </body>

  <script src="/js/productGallery.js"></script>
</html>